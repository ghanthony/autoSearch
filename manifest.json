{
    "name": "auto search",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "search",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title":"关键字自动高亮",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html"
    }, 
    "permissions": [
        "tabs", "http://*/*", "https://*/*", "storage","clipboardRead","clipboardWrite"
    ],
    "web_accessible_resources":[
        "jquery.min.map",
        "clipboard.swf"
    ],
    "content_scripts": [
        {
        "matches": [
            "file:///*/*",
            "http://*/*",
            "https://*/*"
        ],
        "css":[
            "highlight.css"
        ],
        "js": [
            "jquery.min.js",
            "jquery.highlight.js",
            "content.js"
        ],
        "run_at": "document_end",
        "all_frames": true
    }
    ]
}
