{
    "name": "auto search",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "search",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title":"关键字自动高亮",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*", "storage"
    ],
    "content_scripts": [
        {
        "matches": [
            "file:///*/*",
            "http://*/*",
            "https://*/*"
        ],
        "css":[
            "highlight.css"
        ],
        "js": [
            "background.js",
            "jquery-1.10.2.min.js",
            "jquery.highlight.js"
        ],
        "run_at": "document_end",
        "all_frames": true
    }
    ]
}
